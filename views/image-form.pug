extends layout

block content
  .container
    form#upload-form(method='POST' action='/image')
        h1.upload Upload Image

        //- name
        label(for='name') Name:
        input(type='text', name='name')

        //- camera
        label(for='camera') Camera:
        input(type='text', name='camera')

        //- lens
        label(for='lens') Lens:
        input(type='text', name='lens')

        //- film
        label(for='film') Film:
        input(type='text', name='film')

        //- image
        label(for='image') Image:
        input(type='url', name='image', pattern="https://i.imgur.com/.*")

        button(type='submit') Submit